<div class="review-new">
    <%= form_tag({controller: "board", action: "create"}, method: "post",:multipart => true)  do %>
            <span>
                <%= label_tag(:title, "제목") %>
                <%= text_field_tag :title ,nil, :placeholder =>"제목을 입력해주세요." %>
            </span>
            <span>
                <%= label_tag(:content, "내용") %>
                <%= text_area_tag :content ,nil, :placeholder =>"내용을 입력해주세요.",:size => "24x6" %></br>
            </span>    

        <%= hidden_field_tag(:company_id, params[:cp_id]) %>
            <div class="review-rating-div">
                <%= label_tag("별점") %>
                <fieldset class="rating">
                    <input type="radio" id="star5" name="rating" value="5" /><label class = "full" for="star5" title="Awesome - 5 stars"></label>
                    <input type="radio" id="star4half" name="rating" value="4 and a half" /></label>
                    <input type="radio" id="star4" name="rating" value="4" /><label class = "full" for="star4" title="Pretty good - 4 stars"></label>
                    <input type="radio" id="star3half" name="rating" value="3 and a half" /></label>
                    <input type="radio" id="star3" name="rating" value="3" /><label class = "full" for="star3" title="Meh - 3 stars"></label>
                    <input type="radio" id="star2half" name="rating" value="2 and a half" /></label>
                    <input type="radio" id="star2" name="rating" value="2" /><label class = "full" for="star2" title="Kinda bad - 2 stars"></label>
                    <input type="radio" id="star1half" name="rating" value="1 and a half" /></label>
                    <input type="radio" id="star1" name="rating" value="1" /><label class = "full" for="star1" title="Sucks big time - 1 star"></label>
                    <input type="radio" id="starhalf" name="rating" value="half" /></label>
                </fieldset>
            </div>
            <div class="form-group">
                  <label>사진</label>
                  <input type="file" name="pic" accept="image/*">
            </div>
        <%= submit_tag("등록") %>
    <% end %>
</div>


