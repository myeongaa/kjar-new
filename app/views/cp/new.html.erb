<%= form_tag(controller: "cp", action: "create", method: "post") do %>
    <%= label_tag(:name, "업소명") %>
    <%= text_field_tag :name ,nil, :placeholder =>"업소명을 입력해주세요." %></br>
    <%= label_tag(:c_postcode, "우편번호") %>
    <%= text_field_tag :c_postcode ,nil, :placeholder =>"우편번호를 입력해주세요." %></br>
    <%= label_tag(:c_address, "주소") %>
    <%= text_field_tag :c_address ,nil, :placeholder =>"주소를 입력해주세요." %></br>
    <%= label_tag(:c_daddress, "상세주소") %>
    <%= text_field_tag :c_daddress ,nil, :placeholder =>"상세주소를 입력해주세요." %></br>
    <%= label_tag(:tel, "전화번호") %>
    <%= text_field_tag :tel ,nil, :placeholder =>"전화번호를 입력해주세요." %></br>
    <%= label_tag(:opentime, "오픈시간") %>
    <%= text_field_tag :opentime ,nil, :placeholder =>"오픈시간을 입력해주세요." %></br>
    <%= label_tag(:closetime, "마감시간") %>
    <%= text_field_tag :closetime ,nil, :placeholder =>"마감시간을 입력해주세요." %></br>
    <%= label_tag(:runtime, "runtime") %>
    <%= text_field_tag :runtime ,nil, :placeholder =>"1팀 당 소요 시간을 입력해주세요." %>분</br>
    <%= label_tag(:csort_id, "분류") %>
    <%= select_tag 'csort_id', options_for_select(@csorts.collect{ |c| [c.name, c.id] }) %></br>
    <%= submit_tag("등록") %>
<% end %>
